<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:background="@color/grey"
        android:padding="@dimen/mon_padding">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/mon_wide"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/REG_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_hero_height_medium"

            android:scaleType="centerCrop"
            android:src="@drawable/housedesign" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/REG_banner"
            android:background="@drawable/xwhite_rounded_corners">


            <TextView
                android:id="@+id/tvCompanyReg"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:text="Company Registration"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCompanyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCompanyReg"
                android:layout_marginLeft="7dp"
                android:background="@color/grey"
                android:hint="Company name" />

            <TextView
                android:id="@+id/tvOperationsStaff"
                style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtCompanyname"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="Operations Staff"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOperationsStaff"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="First Name" />

            <EditText
                android:id="@+id/edtSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtFirstName"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="Surname" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/edtSurname"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="Email address"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtEmail"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="Enter Pin"
                android:inputType="numberPassword" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edtPin"
                android:background="@color/white">

                <Button
                    android:id="@+id/REG_btnExisting"
                    android:layout_width="125dp"

                    android:layout_height="50dp"
                    android:layout_below="@id/REG_instruction"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonsign"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/REG_btnNewGroup"
                    android:layout_width="125dp"

                    android:layout_height="50dp"
                    android:layout_below="@id/REG_btnExisting"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonlog"
                    android:text="Register"

                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>