<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/MONTOAST_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/MONTOAST_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_wider"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_construction13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MONTOAST_top"
        android:padding="@dimen/mon_wide">

        <TextView
            android:id="@+id/MONTOAST_text"
            style="@style/Title3TextStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="General message text happens here and things could be long in the tooth." />


    </RelativeLayout>

    <TextView
        android:id="@+id/MONTOAST_indicator"
        style="@style/BlueCircleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/mon_padding"
        android:text="M" />

</RelativeLayout>