<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:background="@color/grey"
        android:padding="@dimen/mon_padding">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/mon_wide"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/REG_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mon_hero_height_medium"

            android:scaleType="centerCrop"
            android:src="@drawable/housedesign" />

        <RelativeLayout
            android:id="@+id/REG_ediLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/REG_banner"

            android:background="@color/white"
            android:padding="15dp">


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/REG_mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/REG_ediLayout"
            android:background="@color/white"
            android:padding="15dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="@color/grey2"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtEmaill"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tvSignin"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="Enter Email"
                android:inputType="textEmailAddress" />


            <EditText
                android:id="@+id/edtPinn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edtEmaill"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:hint="Enter Pin"
                android:inputType="numberPassword" />


            <Button
                android:id="@+id/btnSign2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/buttonlog"
                android:text="Sign in"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:layout_below="@id/btnSign2"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonsign"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edtEmaill"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/REG_mainLayout"
            android:background="@color/white"></RelativeLayout>


    </RelativeLayout>
</ScrollView>
